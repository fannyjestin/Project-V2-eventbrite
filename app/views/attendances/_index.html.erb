<div class="container">
  <div class="card-group vgr-cards">
    <div class="card">
      <div class="card-img-body">
      <img class="card-img" src="https://images.unsplash.com/photo-1535074153497-b08c5aa9c236?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=d2aaf944a59f16fe1fe72f5057b3a7dd&auto=format&fit=crop&w=500&q=80" alt="Card image cap">
      </div>
      <div class="card-body">
        <h3 class="card-title"> Hello <%= @current_user.first_name %> !  </h3> <br/>
        <h4> Bravo pour ton event <%= @event.title %> ! </h4> <br/>
        <p class="card-text"> Voici la liste de tes invités : <%= @guests.each do |u| %> <br/> </p> 

        <p class="card-text"> - <%= @guests.first_name %> </p> <br/>
        <% end %>
        
        <p class="btn btn-outline-primary">Pour le moment, tu as : <%= @count %> participants !</p>
        <% if is_owner(@event) %>
        <p class="btn btn-outline-primary text-left"> <%= link_to "Modifie l'événement" , edit_event_path(params[:event_id])  %> </p>
        <% end %>
      </div>
    </div>
    
  </div>
</div>