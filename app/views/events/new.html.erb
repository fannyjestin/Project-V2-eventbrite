<div class ='align-middle text-center'>
    <div class="col-md-5 offset-md-2">
  <form action= "<%= root_path %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <h3> Créé ton nouvel event !</h3>
       <div class="row justify-content-center">
    <p style = "width: 200px"> Titre : <input type="text" name="@event.title"></p>
  </div>
  <div class="row justify-content-center">
    <p style = "width: 200px"> Location : <input type="text" name="location" value="<%= @event.location %>"> </p>
  </div>
  <div class="row justify-content-center">
    <p style = "width: 200px"> Price : <input type="number" name="price" value="<%= @event.price %>"></p>
  </div>
  <div class="row justify-content-center">
    <p style = "width: 200px"> Start Date format : ('YYYY-MM-DD HH:mm:ss') <input type="datetime" name="start_date" value="<%= @event.start_date %>"></p>
  </div>
  <div class="row justify-content-center">
    <p style = "width: 200px">Duration (must be a multiple of 5): <input type="number" name="duration" value="<%= @event.duration %>"></p>
  </div>
  <div class="row justify-content-center">
    <p style = "width: 200px"> Description : <input type="text" name="@event.description"></p>
	</div>
   <p><input type="submit" value="Valider"></p>
	</form>		
</div>
</div>




